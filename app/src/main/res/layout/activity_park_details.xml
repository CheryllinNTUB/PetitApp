<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8FFF5"
    tools:context=".park_details">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/park_image"
        android:src="@drawable/park01"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">


                    <TextView
                        android:id="@+id/parkname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="20dp"
                        android:text="公園名稱"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:padding="20dp"
                        android:text="地址"
                        android:textColor="#3C3C3C"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/parkaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:padding="20dp"
                        android:text="公園地址"
                        android:textSize="25sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:padding="20dp"
                        android:text="公園簡介"
                        android:textSize="20sp"
                        android:textColor="#3C3C3C"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/parkintroduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="240dp"
                        android:padding="20dp"
                        android:text="簡介"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="320dp">

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:text="留下評價"
                            android:layout_gravity="center"
                            android:background="#FFFFCE"/>

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:text="開啟導航"
                            android:layout_gravity="center"
                            android:background="#FFFFCE"/>

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:text="加入最愛"
                            android:layout_gravity="center"
                            android:background="#FFFFCE"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
</RelativeLayout>


</LinearLayout>