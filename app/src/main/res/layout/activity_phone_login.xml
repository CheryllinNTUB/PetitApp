<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".phone_login"
    android:background="#E8FFF5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_smartphone_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="電話號碼登入"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="請輸入您的電話號碼"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="#777777"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="以便發送驗證碼"
            android:textAlignment="center"
            android:textColor="#777777"/>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp" 
        android:layout_marginEnd="60dp" 
        android:gravity="center"
        android:orientation="horizontal">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/_886"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/phoneEn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@null"
                android:importantForAutofill="no"
                android:layout_gravity="center"
                android:imeOptions="actionDone"
                android:hint="9xxxxxxxx"
                android:inputType="number"
                android:textColorHint="#c5c5c5" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:background="#BDBDBD"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/next"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundbutton"
            android:text="獲取驗證碼"/>



    </FrameLayout>

    </LinearLayout>

</ScrollView>